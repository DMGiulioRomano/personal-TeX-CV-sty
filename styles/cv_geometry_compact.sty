\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{cv_geometry_compact}[2025/08/21 Compact dense geometry]

\RequirePackage{cv_geometry_base}

% === MARGINI COMPATTI ===
% Massima informazione in minimo spazio
\geometry{
  a4paper,
  top=15mm,
  bottom=15mm,
  left=15mm,
  right=15mm,
  headheight=0pt,
  headsep=0pt,
  footskip=10mm
}

% === SPAZIATURA COMPATTA ===
\titlespacing*{\section}{0pt}{8pt plus 2pt minus 1pt}{4pt plus 1pt minus 1pt}
\titlespacing*{\subsection}{0pt}{6pt plus 1pt}{2pt plus 1pt minus 1pt}

% Riduce spazio paragrafi
\setlength{\parskip}{0.1em}

% === LISTE COMPATTE ===
\setlist[itemize,1]{
  leftmargin=1em,
  itemsep=0pt,
  topsep=1pt,
  parsep=0pt,
  label={\tiny\textbullet}
}

% === FONT SIZE ADATTIVO ===
% Per layout compatti usa font leggermente pi√π piccoli
\renewcommand{\large}{\fontsize{11}{13}\selectfont}
\renewcommand{\Large}{\fontsize{13}{15}\selectfont}
\renewcommand{\LARGE}{\fontsize{15}{17}\selectfont}