% Icone minimal
\usepackage{fontawesome5}

% Math support per eventuali formule in pubblicazioni
\usepackage{amsmath,amsfonts,amssymb}

% Ridefinizioni per stile accademico
\renewcommand{\namefont}[1]{{\fontsize{20}{24}\selectfont\bfseries #1}}
\renewcommand{\rolefont}[1]{{\Large\itshape #1}}
\renewcommand{\sectionfont}[1]{{\Large\bfseries #1}}

% Comandi per citazioni e pubblicazioni
\newcommand{\pubtitle}[1]{\textit{#1}}
\newcommand{\journal}[1]{\textbf{#1}}
\newcommand{\confname}[1]{\textsc{#1}}
