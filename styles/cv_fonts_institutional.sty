\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{cv_fonts_institutional}[2025/08/21 Institutional fonts for formal CVs]

\RequirePackage{cv_fonts_base}

% Font istituzionali (conformi standard UE/accademici)
% PrioritÃ : Arial > Liberation Sans > Source Sans Pro (fallback)
\IfFontExistsTF{Arial}{
  \setmainfonts{Arial}{Arial}{Courier New}
}{
  \IfFontExistsTF{Liberation Sans}{
    \setmainfonts{Liberation Serif}{Liberation Sans}{Liberation Mono}
  }{
    % Fallback per sistemi senza font Microsoft/Liberation
    \setmainfonts{TeX Gyre Termes}{TeX Gyre Heros}{TeX Gyre Cursor}
  }
}

% NO icone decorative in contesti istituzionali
