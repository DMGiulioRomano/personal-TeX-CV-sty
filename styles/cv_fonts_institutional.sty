% Ridefinizioni per stile istituzionale
\renewcommand{\namefont}[1]{{\fontsize{18}{22}\selectfont\bfseries\MakeUppercase{#1}}}
\renewcommand{\rolefont}[1]{{\large #1}}
\renewcommand{\sectionfont}[1]{{\large\bfseries\MakeUppercase{#1}}}

% Formato date standardizzato
\newcommand{\europassdate}[1]{\textbf{#1}}
