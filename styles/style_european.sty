% --- Esperienze in stile europeo (blocchi con itemize) ---
\newcommand{\experience}[4]{
  \noindent\textbf{#3} \hfill {\small #1}\\
  \emph{#2}\\[-4pt]
  \begin{itemize}[leftmargin=*] #4 \end{itemize}
  \vspace{0.5em}
}

% --- Eventi artistici in stile europeo ---
\newcommand{\artisticevent}[6]{
  \noindent\textbf{#4} \hfill {\small #1}\\
  \emph{#2} -- #3\\[2pt]
  \begin{itemize}[leftmargin=*]
    \item \textbf{Organico:} #5
    \item \textbf{Programma:} #6
  \end{itemize}
  \vspace{0.5em}
}

% --- Formato istruzione ---
\newcommand{\education}[4]{
  \noindent\textbf{#3} \hfill {\small #1}\\
  \emph{#2}\\[-4pt]
  {#4}\par\vspace{0.5em}
}

% --- Sezioni per raggruppare ---
\newcommand{\cvsection}[2]{
  \section*{#1}
  #2
}