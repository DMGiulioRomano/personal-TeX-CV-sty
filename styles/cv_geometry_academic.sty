\usepackage{xcolor}
\definecolor{academicgray}{gray}{0.6}

% Comando per linea di sezione accademica
\newcommand{\academicline}{%
  {\color{academicgray}\rule{\textwidth}{0.3pt}}
}

% === SUPPORTO MULTILINGUE ===
